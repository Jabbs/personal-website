<div class="row">
	<div class="col-md-1">
		<div class="box chevron" id="chevron-meh">
			<i class="fa fa-chevron-left fa-2x"></i>
		</div>
		<div class="box chevron" id="chevron-caw" style="display:none;">
			<i class="fa fa-chevron-left fa-2x"></i>
		</div>
	</div>
	<div class="col-md-10">
		<div class="box box-height white-background">
			<div class="portfolio-item" id="caw">
				<div class="row">
					<div class="col-md-6">
						<%= image_tag "//s3.amazonaws.com/petejabbour-website/screenshot-caw.png" %>
					</div>
					<div class="col-md-6">
						<div class="portfolio-content">
							<%= link_to "http://www.civicartworks.com", target: "_blank" do %>
								<%= image_tag "//s3.amazonaws.com/caw-prod/logos/civic_art_works_logo.png", alt: "Civic ArtWorks", title: "Civic ArtWorks" %>
							<% end %>
							<p>Role: Lead Developer and Designer</p>
						</div>
					</div>
				</div>
			</div>
			<div class="portfolio-item" id="wts" style="display:none;">
				<div class="row">
					<div class="col-md-6">
						<%= image_tag "//s3.amazonaws.com/petejabbour-website/screenshot-wts.png" %>
					</div>
					<div class="col-md-6">
						<div class="portfolio-content">
							<%= image_tag "//s3.amazonaws.com/petejabbour-website/waytosettle_logo.png", alt: "WayToSettle", title: "WayToSettle" %>
							<p>Role: Lead Developer</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-1">
		<div class="box chevron" id="chevron-wts">
			<i class="fa fa-chevron-right fa-2x"></i>
		</div>
		<div class="box chevron" id="chevron-bit" style="display:none;">
			<i class="fa fa-chevron-right fa-2x"></i>
		</div>
	</div>
</div>
<div class="row bottom-margin" style="margin-top:20px;">
	<div class="col-md-12">
		<div class="center grey">
			<div class="square square-on" id="sq-caw"></div>
			<div class="square" id="sq-wts"></div>
			<div class="square" id="sq-wts"></div>
			<div class="square" id="sq-wts"></div>
			<div class="square" id="sq-wts"></div>
		</div>
	</div>
</div>