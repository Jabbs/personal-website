<div id="banner" class="parallax-window" data-parallax="scroll" data-position="0px 0px" data-image-src="http://s3.amazonaws.com/petejabbour-website/chicago.jpg">
	<div class="container" style="padding-top: 40px;">
		<div style="margin-bottom:80px;">
			<%= render "shared/profile", page: "about", direction: "bottom" %>
		</div>
	</div>
</div>

<div id="portfolio" class="blue-light-background grey-light" style="padding: 80px;">
	<h1 class="center">
		Here is an incomplete
		<div class="custom-link portfolio-link">PORTFOLIO</div>
		of recent projects...
	</h1>
</div>

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
		<li data-target="#carousel-example-generic" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox" style="height: 700px;">
    <div class="item active">
      <%= render "shared/carousel/carousel", product: "municipal" %>
    </div>
    <div class="item">
			<%= render "shared/carousel/carousel", product: "hellobar" %>
    </div>
		<div class="item">
			<%= render "shared/carousel/carousel", product: "stockalerts" %>
		</div>
		<div class="item">
			<%= render "shared/carousel/carousel", product: "huntclub" %>
		</div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev" style="padding-top:330px;">
    <span class="fa fa-chevron-left fa-2x" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next" style="padding-top:330px;">
    <span class="fa fa-chevron-right fa-2x" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

